<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_divider_black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studentRollNumber"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="CE-2212-2K14"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attendCount"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/attendCount"
                android:orientation="horizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/subAttendance"
                    android:text="A"
                    android:background="@android:color/holo_red_light"
                    android:elevation="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/addAttendance"
                    android:elevation="5dp"
                    android:background="@android:color/holo_green_light"
                    android:text="P"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>