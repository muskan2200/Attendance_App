<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:backgroundTint="#55000000"
    android:backgroundTintMode="src_over">

    <RelativeLayout
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/TeacherGreetingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello!Teacher"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/TeacherGreetingText"
            android:id="@+id/TodayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello!Teacher"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_below="@+id/TodayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/takeAttendanceButton"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="TAKE ATTENDANCE"
            />
        <Button
            android:text="MY PROFILE"
            android:layout_below="@+id/contactClassRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teacherProfileManager"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <Button
            android:text="CONTACT CLASS REP."
            android:layout_below="@+id/takeAttendanceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactClassRep"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <Button
            android:text="NEED HELP!!"
            android:layout_below="@+id/teacherProfileManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rateApp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <Button
            android:text="LOG OUT"
            android:layout_below="@+id/rateApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logOut"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

</RelativeLayout>