<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_divider_black">

    <android.support.v7.widget.CardView
        android:elevation="10dp"
        app:cardCornerRadius="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_centerVertical="true"
                android:id="@+id/callTeacher"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/sym_action_call"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/nameOfTeacher"
                android:text="NameOfTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/background_dark"
                android:layout_below="@+id/nameOfTeacher"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/departmentOfTeacher"
                android:text="Department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/background_dark"
                android:layout_below="@+id/departmentOfTeacher"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/typeOfTeacher"
                android:text="Position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="3dp"
                android:textColor="@android:color/background_dark"
                android:layout_below="@id/typeOfTeacher"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/PgoneOfTeacher"
                android:text="PhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>